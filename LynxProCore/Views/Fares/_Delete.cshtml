@model FareViewModel


<style>
    .modal .modal-content .modal-footer {
        border-top: 1px solid #2f333a;
    }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Delete Fare</h4>
</div>
<div class="modal-body">
    <div class="bootbox-body">
        <h4>Are you sure you want to delete this fare?</h4>
    </div>
</div>
@using (Html.BeginForm("Delete", "Fares", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-footer">
        <button type="button" class="btn secondary" style="color:white;" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Confirm" class="btn danger-action" />
    </div>
}
